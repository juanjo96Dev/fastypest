{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src"
  }
}
